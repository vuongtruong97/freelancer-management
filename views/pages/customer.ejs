<!-- Bootstrap Table with Header - Footer -->
<h3 class="card-header">Danh sách khách hàng</h3>
<div class="card">
   
    <div class="table-responsive text-nowrap">
        <table class="table">
            <thead>
                <tr>
                    <th>Tên khách hàng</th>
                    <th>Email khách hàng</th>
                    <th>Số điện thoại</th>
                    <th>Trạng thái</th>
                    <th>Chi tiết</th>
                </tr>
            </thead>
            <tbody>
                <% data.forEach(function(item) { %>
                    <tr>
                        <td>
                            <i class="fab fa-angular fa-lg text-danger me-3"></i>
                            <strong><%= item.fullName ? item.fullName:item.firstName%></strong>
                        </td>
                        <td><%= item.email ? item.email:'-'%></td>
                        <td><%= item.phone ? item.phone:'-'%></td>
                        <td><span class="badge bg-label-<%=item.statusColor%> me-1"><%=item.status%></span></td>
                        <td>
                            <div class="dropdown">
                                <button
                                    type="button"
                                    class="btn p-0 dropdown-toggle hide-arrow"
                                    data-bs-toggle="dropdown"
                                >
                                    <i class="bx bx-dots-vertical-rounded"></i>
                                </button>
                                <div class="dropdown-menu">
                                    <a class="dropdown-item" href="/detail-project/<%=item.id%>"
                                        ><i class="bx bx-edit-alt me-1"></i> Chi tiết</a
                                    >
                                    <!-- <a class="dropdown-item" href="javascript:void(0);"
                                        ><i class="bx bx-trash me-1"></i> Delete</a
                                    > -->
                                </div>
                            </div>
                        </td>
                    </tr>
                <%})%>
               
            </tbody>
        
        </table>
    </div>
</div>
<!-- Bootstrap Table with Header - Footer -->
